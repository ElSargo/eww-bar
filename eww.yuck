(defpoll hour :interval "1s" "date +%I")
(defpoll min  :interval "1s" "date +%M")
(defpoll sec  :interval "1s" "date +%S")
(defpoll day :interval "1s" "date +%a")
(defpoll daynum :interval "1s" "date +%d")
(defpoll mon :interval "1s" "date +%b")
(deflisten workspace-content :initial "" "$EWW_UTILS")
(deflisten battery :initial "50.1" "nu ~/.config/eww/src/bat.nu")
(deflisten mem :initial "50.0" "nu ~/.config/eww/src/mem.nu")
(deflisten nety :initial "󱛅" "nu ~/.config/eww/src/network.nu")


(defwidget top []
  (box 
:vexpand true    :style "margin: 1px; padding: 1px; border: 0px"
    :orientation "v"
    
    ; :valign "end"

    (box
:vexpand true      :orientation "v"
      (button
        :style "background: #3C3836;padding: 1px;border-radius: 1.4rem; min-width: 25px; min-height: 25px;margin-top: 5px;"
        :onclick "hyprctl dispatch exec cpupower-gui"
        (circular-progress
          :value battery
          :thickness 2
          :style "color: #b8bb26;"
        )
      )
      (button
        :style "background: #3C3836;padding: 1px;border-radius: 1.4rem;margin-top: 5px;"
        :onclick "hyprctl dispatch exec foot htop"
        (circular-progress 
          :value mem
          :thickness 2
          :clockwise false
          :style "color: #fabd2f;"
        )
      )
      (button
        :style "background: #3C3836;padding: 1px;border-radius: 1.4rem;margin-top: 5px;"
        :onclick "hyprctl dispatch exec foot htop"
        (circular-progress 
          :value {EWW_CPU.avg}
          :thickness 2
          :clockwise false
          :style "color: #83a598;"
        )
      )
      ; (button :onclick "hyprctl dispatch exec foot nmtui" :style "padding-right: 4px;font-size: 1.6rem;color: #fb4934;" "${nety}")
      ; (button :onclick "hyprctl dispatch exec foot hx ~/Documents/Journal.md" :style "padding-right: 9px;font-size: 1.6rem;color: #fb4934;" "")
      ; (button :onclick "hyprctl dispatch exec unixchadbookmarks ~/nix-files/bookmarks" :style "padding-right: 9px;font-size: 1.6rem;color: #b8bb26;" "")
      ; (button :onclick "hyprctl dispatch exec librewolf" :style "padding-right: 4px;font-size: 1.6rem;color: #fe8019;" "")
      ; (button :onclick "hyprctl dispatch exec foot lf" :style "padding-right: 4px;font-size: 1.6rem;color: #fabd2f;" "")
      ; (button :onclick "hyprctl dispatch exec 'wofi --show drun'" :style "padding-right: 9px;font-size: 1.6rem;color: #83a598;" "")

    )
  )
)

(defwidget time []

  (box
    :height "5%" 
    :vexpand true
    :valign "center"
    :orientation "v" 
    :class "time"
    :style "font-size: 1.1rem;"
    :space-evenly false
    (button
        :vexpand true
        :onclick 'date "+%a %d %b" | wl-copy & hyprctl notify -1 2000 "rgb(fb4934)" "Date copied!"'
      (box
        :vexpand true
        :orientation "v"
        (box :style "color: #83a598;font-size: 0.8rem;" day) 
        (box :style "color: #fabd2f" daynum) 
        (box :style "color: #fb4934;font-size: 0.8rem" mon)
      )
    )
    "-"
    (box
      :vexpand true
      :orientation "v"
      (box :style "color: #fb4934" hour) 
      (box :style "color: #fabd2f" min) 
      (box :style "color: #83a598" sec)
    )
  )
)

(defwidget workspaces [] 
  (box
    :orientation "h" 
    :halign "center"
    :vexpand true
    :valign "end"
    ( literal 
        :style "padding-right: 3px;font-size: 1.4rem;"
      :vexpand true
      :content workspace-content 
    )
  )
)


(defwidget main []
  (box
    :vexpand true
    :space-evenly false
    :style "padding: 0px;margin: 0px;border-radius: 20.0px;"
    (box
    :space-evenly false
      :vexpand true
      :orientation "v"
      (box 
        :height "5%" 
        :vexpand true 
        :valign "start" 
        (top
          :height "5%" 
          :vexpand true 
        ) 
      )
      (box  
        :height "5%"  
        :vexpand true 
        (time
          :height "5%" 
          :vexpand true 
        ) 
      )
      (box 
        :vexpand true 
        (workspaces 
          :vexpand true 
        ) 
      )
    )
  )
)

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :exclusive true
  :geometry 
    (geometry 
      :x "5px"
      :y "2%"
      :width "25px"
      :height "98%"
      :orientation "v"
      :anchor "center left"
    )
  :style "border-radius: 2.0rem"
  (main)
)

(defwindow bar2
  :monitor 1
  :windowtype "dock"
  :exclusive true
  :geometry 
    (geometry 
      :x "5px"
      :y "1%"
      :width "25px"
      :height "98%"
      :orientation "v"
      :anchor "center left"
    )
  :style "border-radius: 2.0rem"
  (main)
)
